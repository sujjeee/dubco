{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": ["node_modules", "dist"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "recommended": true
      },
      "correctness": {
        "noUnusedImports": "warn"
      },
      "suspicious": {
        "useAwait": "warn"
      },
      "complexity": {
        "noForEach": "off"
      }
    },
    "ignore": ["node_modules", "dist"]
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space",
    "ignore": ["node_modules", "dist"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingCommas": "none",
      "bracketSpacing": true
    }
  }
}
